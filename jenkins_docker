pipeline{
  agent any
  stages{
    stage('Downloading CentOS Latest'){
      steps{
        sh "docker pull centos:7"
      }
    }
    stage('Creating a Docker container with CentOS'){
      steps{
        sh "docker run centos /bin/bash"
      }
    }
    stage('Starting the container'){
      steps{
        sh "docker start 9e4e9ef8b671"
      }
    }
  }
}    
